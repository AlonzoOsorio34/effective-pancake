import turtle
turtle.speed(20)#sets the speed 
turtle.pensize(3) # Set pen thickness to 3 pixels
turtle.penup() # Pull the pen up
turtle.goto(-120, -120)#moves the turtle to here
turtle.pendown() # Pull the pen down
turtle.color("red")#color set 

#Triangle 1
turtle.begin_fill()
for i in range(4):
  turtle.forward(200) # Draw a line
  turtle.left(120) # Turn left 90 degrees
turtle.end_fill()

#Triangle 2
turtle.goto(-120, -120)
turtle.begin_fill()
for i in range(4):
  turtle.backward(200)
  turtle.left(120)
turtle.end_fill()


